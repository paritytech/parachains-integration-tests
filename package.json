{
  "name": "parachains-integration-test",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Ignacio Palacios",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node ./bin/index.js",
    "dev": "ts-node ./src/index.ts",
    "dmp": "ts-node ./src/index.ts dmp",
    "polkadot-launch": "./node_modules/.bin/polkadot-launch config.json",
    "polkadot-launch:test": "yarn polkadot-launch & yarn wait & yarn test",
    "wait": "ts-node ./tests/waitForParachain.ts",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha --timeout 100000 -r ts-node/register 'tests/*/*.ts'",
    "test:xcm": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha --timeout 100000 -r ts-node/register 'tests/xcm/*.ts'",
    "test:xcm:limited-teleport-asset": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha --timeout 100000 -r ts-node/register 'tests/xcm/teleportAssets.ts'",
    "test:xcm:transact": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha --timeout 100000 -r ts-node/register 'tests/xcm/transact.ts'",
    "test:assets": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha --timeout 100000 -r ts-node/register 'tests/assets/*.ts'",
    "dev:assets:create": "ts-node ./src/extrinsics/assets/assetsCreate.ts",
    "assets:create": "node ./bin/src/extrinsics/assets/assetCreate.js",
    "dev:assets:force-create": "ts-node ./src/extrinsics/assets/assetsForceCreate.ts",
    "assets:force-create": "node ./bin/src/extrinsics/assets/assetForceCreate.js",
    "dev:assets:set-metadata": "ts-node ./src/extrinsics/assets/assetsSetMetadata.ts",
    "assets:set-metadata": "node ./bin/src/extrinsics/assets/assetsSetMetadata.js",
    "dev:assets:mint": "ts-node ./src/extrinsics/assets/assetsMint.ts",
    "assets:mint": "node ./bin/src/extrinsics/assets/assetsMint.js",
    "dev:assets:transfer": "ts-node ./src/extrinsics/assets/assetsTransfer.ts",
    "assets:transfer": "node ./bin/src/extrinsics/assets/assetsTransfer.js",
    "test:uniques": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha --timeout 100000 -r ts-node/register 'tests/uniques/*.ts'",
    "dev:uniques:create": "ts-node ./src/extrinsics/uniques/uniquesCreate.ts",
    "uniques:create": "node ./bin/src/extrinsics/uniques/uniquesCreate.js",
    "dev:uniques:set-metadata": "ts-node ./src/extrinsics/uniques/uniquesSetMetadata.ts",
    "uniques:set-metadata": "node ./bin/src/extrinsics/uniques/uniquesSetMetadata.js",
    "dev:uniques:mint": "ts-node ./src/extrinsics/uniques/uniquesMint.ts",
    "uniques:mint": "node ./bin/src/extrinsics/uniques/uniquesMint.js",
    "dev:uniques:transfer": "ts-node ./src/extrinsics/uniques/uniquesTransfer.ts",
    "uniques:transfer": "node ./bin/src/extrinsics/uniques/uniquesTransfer.js",
    "dev:register-parachains": "ts-node ./src/extrinsics/registerParachains.ts",
    "register-parachains": "node ./bin/src/extrinsics/registerParachains.js",
    "dev:init-chains": "ts-node ./src/extrinsics/initChains.ts",
    "init-chains": "node ./bin/src/extrinsics/initChains.js"
  },
  "dependencies": {
    "@types/node": "^16.7.10",
    "bn.js": "^5.2.0",
    "command-line-args": "^5.2.0",
    "dotenv": "^10.0.0",
    "polkadot-launch": "^1.9.0",
    "typescript": "^4.4.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "chai-bn": "^0.3.0",
    "mocha": "^9.1.3",
    "ts-node": "^10.4.0"
  }
}
